%{
/* Exo1.lex */
#include <stdio.h>
#include "exo1.tab.h"
int lineno = 1;
%}

%option nounput
%option noinput
%option noyywrap

%%
\n 									{lineno+=1; return '\n';}
int|char|double|float 				{return TYPE;}
void 								{return VOID;}
if 									{return IF;}
while								{return WHILE;}
return 								{return RETURN;}
else								{return ELSE;}
-?[0-9]+							{return NUM;}
[/*]								{return DIVSTAR;}
[+-]								{return ADDSUB;}
[><]=?								{return ORDER;}
==									{return EQ;}
"&&"								{return AND;}
"||"								{return OR;}
\'.\'								{return CHARACTER;}
printf								{return PRINT;}
reade								{return READE;}
readc								{return READC;}
[a-zA-Z][a-zA-Z0-9_]* 					{return IDENT;}
<<EOF>> 							{return 0;}
. 									{return yytext[0];}
%%
